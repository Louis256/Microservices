<?xml version="1.0" encoding="UTF-8"?>    
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.boot.dao.CourseDao">  

    <resultMap id="CourseResultMap" type="com.boot.domain.Course">  
        <id column="course_id" property="courseId" jdbcType="BIGINT" />  
        <result column="course_name" property="courseName" jdbcType="CHAR" /> 
        <result column="course_description" property="courseDescription" jdbcType="CHAR" />  
        <result column="created_by" property="createdBy" jdbcType="CHAR" /> 
        <result column="created_data" property="createdDate" jdbcType="DATE" /> 
        <result column="modified_by" property="modifiedBy" jdbcType="CHAR" /> 
        <result column="modified_data" property="modifiedData" jdbcType="DATE" /> 
        <result column="subscription_fee" property="subscriptionFee" jdbcType="FLOAT" /> 
        
    </resultMap>  

    <insert id="save" parameterType="com.boot.domain.Course" 
    useGeneratedKeys="true" keyProperty="courseId" >
        INSERT INTO course (course_name, course_description, created_by, created_date, 
        modified_by, modified_date, subscription_fee) 
        VALUES (#{courseName}, #{courseDescription}, #{createdBy}, #{createdDate}, 
        #{modifiedBy}, #{modifiedDate},#{subscriptionFee})       
    </insert>
    
    
    <select id="findAll" resultMap="CourseResultMap">
        SELECT *                     
        FROM course 
        ORDER BY course_id DESC
    </select>
    
    <select id="find" resultMap="CourseResultMap">
        SELECT *           
        FROM course
        WHERE course_id = #{courseId}
    </select>
    
    <update id="update" parameterType="com.boot.domain.Course">
        UPDATE course SET 
	        course_name = #{courseName},
	        course_description = #{courseDescription},
        	modified_by = #{modifiedBy},
        	subscription_fee = #{subscriptionFee}   
        WHERE course_id = #{courseId}
    </update>
    
    <delete id="delete" parameterType="Long">
        DELETE FROM course WHERE course_id = #{courseId}
    </delete>
</mapper> 